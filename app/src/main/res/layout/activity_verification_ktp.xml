<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".section.verification.VerificationKtpActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/default_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="match_parent"
            android:text="@string/text_ktp_verification"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/DefaultMargin"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_title"
            android:fontFamily="@font/myriadpro_bold"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"/>

    <SurfaceView
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="20dp"
            style="@style/DefaultMargin"
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
    <Button
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/text_take_ktp"
            android:textAllCaps="false"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:id="@+id/btn_add_life_plan"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button_yellow_active"
            android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>