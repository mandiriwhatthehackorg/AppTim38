<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        tools:context=".section.login.LoginActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:isScrollContainer="false">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="180dp"
                    android:src="@drawable/logo_mandiri"
                    app:layout_constraintBottom_toTopOf="@id/et_username"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_width="match_parent"
                    app:layout_constraintBottom_toTopOf="@id/et_input_password"
                    android:layout_marginBottom="15dp"
                    style="@style/DefaultMargin"
                    android:hint="@string/text_username"
                    android:padding="15dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:id="@+id/et_username"
                    android:fontFamily="@font/myriadpro_regular"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/edit_text_background"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/et_input_password"
                    app:hintEnabled="false"
                    app:layout_constraintBottom_toTopOf="@id/btn_login"
                    android:layout_marginBottom="50dp"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="match_parent"
                        style="@style/DefaultMargin"
                        android:hint="@string/text_password"
                        android:padding="15dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:id="@+id/et_password"
                        android:fontFamily="@font/myriadpro_regular"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/edit_text_background"
                        android:layout_height="wrap_content"
                        tools:ignore="Autofill"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                    android:layout_width="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/rounded_button_yellow_active"
                    style="@style/DefaultMargin"
                    android:text="@string/text_login"
                    android:fontFamily="@font/myriadpro_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:id="@+id/btn_login"
                    android:textAllCaps="false"
                    android:layout_marginBottom="100dp"
                    android:layout_height="50dp"/>

            <ProgressBar
                    android:layout_width="wrap_content"
                    android:id="@+id/progress_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="100dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</RelativeLayout>