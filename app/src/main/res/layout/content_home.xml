<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".section.home.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="?attr/colorPrimary"
                android:gravity="center"
                app:popupTheme="@style/AppTheme.PopupOverlay">
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/logo_mandiri"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/btn_add_life_plan">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        style="@style/DefaultMargin"
                        android:id="@+id/card_account_info"
                        app:layout_constraintTop_toTopOf="parent"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ProgressBar
                                android:layout_width="wrap_content"
                                android:id="@+id/progress_bar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/linearLayout"
                                android:paddingBottom="20dp"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:background="@color/colorYellowMandiri"
                                    android:layout_marginTop="30dp"
                                    android:layout_height="30dp"/>

                            <TextView
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/myriadpro_bold"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="18sp"
                                    style="@style/DefaultMargin"
                                    android:id="@+id/tv_account_number"
                                    android:layout_marginTop="10dp"
                                    tools:text="No Rekening : 123456789"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:layout_width="match_parent"
                                    style="@style/DefaultMargin"
                                    android:fontFamily="@font/myriadpro_regular"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:id="@+id/tv_account_name"
                                    tools:text="Nama Saya : Irfan Pertadima"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/card_account_info"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="20dp"
                        style="@style/DefaultMargin"
                        android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:padding="20dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:text="@string/life_plan"
                                android:fontFamily="@font/myriadpro_semibold"
                                android:textSize="18sp"
                                android:textColor="@color/colorBlack"
                                android:id="@+id/tv_life_plan"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_width="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/tv_life_plan"
                                app:layout_constraintBottom_toBottomOf="@id/tv_life_plan"
                                app:layout_constraintRight_toRightOf="parent"
                                android:text="@string/text_see_all"
                                android:fontFamily="@font/myriadpro_regular"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/tv_life_plan_detail"
                                android:layout_height="wrap_content"/>

                        <View
                                android:layout_width="match_parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_life_plan"
                                android:layout_marginTop="20dp"
                                android:id="@+id/line"
                                android:background="@color/lineColor"
                                android:layout_height="1dp"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                                app:layout_constraintTop_toBottomOf="@id/line"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:padding="10dp"
                                android:id="@+id/layout_plan"
                                android:layout_height="wrap_content">
                            <ImageView
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:layout_width="wrap_content"
                                    app:srcCompat="@drawable/ic_school"
                                    android:id="@+id/ic_school"
                                    app:tint="@color/colorPrimary"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_school"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textColor="@color/colorBlack"
                                    android:id="@+id/tv_plan_for_title"
                                    app:layout_constraintLeft_toRightOf="@id/ic_school"
                                    app:layout_constraintTop_toTopOf="@id/ic_school"/>


                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_dummy_presentage"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:textColor="@color/colorBlack"
                                    android:id="@+id/tv_persentage"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/ic_school"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_dummy_duration"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/plan_duration"
                                    android:fontFamily="@font/myriadpro_regular"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorBlack"
                                    app:layout_constraintLeft_toRightOf="@id/ic_school"
                                    app:layout_constraintTop_toBottomOf="@id/tv_plan_for_title"
                                    tools:ignore="SmallSp"/>

                            <ProgressBar
                                    android:id="@+id/progress"
                                    app:layout_constraintTop_toBottomOf="@id/plan_duration"
                                    android:layout_marginTop="20dp"
                                    android:max="100"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:progressDrawable="@drawable/progressbar_vertical"
                            />

                            <TextView
                                    app:layout_constraintTop_toBottomOf="@id/progress"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="0dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:id="@+id/future_title"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/myriadpro_regular"
                                    app:layout_constraintRight_toLeftOf="@id/current_title"
                                    android:text="@string/text_value_title"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    app:layout_constraintTop_toBottomOf="@id/progress"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="0dp"
                                    android:id="@+id/current_title"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"
                                    android:fontFamily="@font/myriadpro_regular"
                                    app:layout_constraintLeft_toRightOf="@id/future_title"
                                    app:layout_constraintRight_toRightOf="parent"
                                    android:text="@string/text_current_value"
                                    android:layout_height="wrap_content"/>


                            <TextView
                                    app:layout_constraintTop_toBottomOf="@id/future_title"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="0dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:id="@+id/future_value"
                                    android:textColor="@color/colorBlack"
                                    android:fontFamily="@font/myriadpro_semibold"
                                    app:layout_constraintRight_toLeftOf="@id/current_title"
                                    android:text="@string/dummy_future"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    app:layout_constraintTop_toBottomOf="@id/current_title"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="0dp"
                                    android:id="@+id/current_value"
                                    android:textColor="@color/colorBlack"
                                    android:fontFamily="@font/myriadpro_semibold"
                                    app:layout_constraintLeft_toRightOf="@id/future_value"
                                    app:layout_constraintRight_toRightOf="parent"
                                    android:text="@string/dummy_future"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    app:layout_constraintTop_toBottomOf="@id/future_value"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="0dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:id="@+id/saving_title"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/myriadpro_regular"
                                    app:layout_constraintRight_toLeftOf="@id/current_title"
                                    android:text="@string/text_menabung"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    app:layout_constraintTop_toBottomOf="@id/saving_title"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="0dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:id="@+id/saving_value"
                                    android:textColor="@color/colorBlack"
                                    android:fontFamily="@font/myriadpro_semibold"
                                    app:layout_constraintRight_toLeftOf="@id/current_title"
                                    android:text="@string/dummy_future"
                                    android:layout_height="wrap_content"/>

                            <Button
                                    app:layout_constraintTop_toBottomOf="@id/future_value"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="100dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/btn_saving"
                                    android:textSize="12sp"
                                    android:background="@drawable/rounded_button_blue_active"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/myriadpro_semibold"
                                    app:layout_constraintRight_toRightOf="parent"
                                    android:text="@string/text_do_saving"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                            app:layout_constraintTop_toBottomOf="@id/layout_plan"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/layout_empty"
                            android:layout_height="wrap_content">
                        <ImageView
                                app:srcCompat="@drawable/ic_scroll"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>

                        <TextView
                                android:text="@string/text_life_plan_desc"
                                android:textAlignment="center"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/myriadpro_regular"
                                android:textColor="@color/colorBlack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <Button
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/text_create_life_plan"
                android:textAllCaps="false"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:id="@+id/btn_add_life_plan"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rounded_button_yellow_active"
                android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>