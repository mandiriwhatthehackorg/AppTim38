<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/image_onboarding"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/title_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:fontFamily="@font/myriadpro_bold"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            style="@style/DefaultMargin"
            app:layout_constraintTop_toBottomOf="@id/image_onboarding"
            android:text="@string/text_dummy_onboarding_title"/>

    <TextView
            android:id="@+id/desc_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/DefaultMargin"
            android:textAlignment="center"
            android:fontFamily="@font/myriadpro_regular"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/title_onboarding"
            android:text="@string/text_dummy_onboarding_desc"/>


</androidx.constraintlayout.widget.ConstraintLayout>