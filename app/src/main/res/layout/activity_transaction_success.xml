<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".section.verification.TransactionSuccessActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/default_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:layout_width="100dp"
            android:id="@+id/logo"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/logo_mandiri"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Transaksi Berhasil"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:id="@+id/title"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/myriadpro_bold"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Kamu sudah satu langkah lebih maju untuk menyongsong masa depanmu."
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textAlignment="center"
            style="@style/DefaultMargin"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/myriadpro_regular"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Kembali ke halaman Utama"
            android:textAllCaps="false"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:id="@+id/btn_add_life_plan"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button_yellow_active"
            android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>