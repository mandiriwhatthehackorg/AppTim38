<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".section.profile.ProfileActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/default_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/progress_bar"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_account_number"
                android:textAlignment="center"
                android:fontFamily="@font/myriadpro_bold"
                android:textColor="@color/colorYellowMandiri"
                android:textSize="22sp"
                style="@style/DefaultMargin"
                android:layout_marginTop="40dp"
                tools:text="12345221"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="match_parent"
                style="@style/DefaultMargin"
                android:layout_marginTop="40dp"
                android:background="@color/colorWhite"
                android:layout_height="1dp"/>

        <TextView
                android:drawableStart="@drawable/ic_account_box"
                android:layout_marginTop="20dp"
                style="@style/DefaultMargin"
                android:id="@+id/tv_name_profile"
                android:drawablePadding="20dp"
                android:textSize="18sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/colorWhite"
                tools:text="Nama : Irfan Pertadima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:drawableStart="@drawable/ic_phone"
                android:layout_marginTop="20dp"
                style="@style/DefaultMargin"
                android:id="@+id/tv_no_hp"
                android:drawablePadding="20dp"
                android:textSize="18sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/colorWhite"
                tools:text="Nama : Irfan Pertadima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:drawableStart="@drawable/ic_location"
                android:layout_marginTop="20dp"
                style="@style/DefaultMargin"
                android:id="@+id/tv_alamat"
                android:drawablePadding="20dp"
                android:textSize="18sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/colorWhite"
                tools:text="Nama : Irfan Pertadima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>